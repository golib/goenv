#!/usr/bin/env bash
# Summary: List all Golang versions available to goenv
# Usage: goenv versions [--bare]
#
# Lists all Golang versions found in `$GOENV_ROOT/versions/*'.

set -e
[ -n "$GOENV_DEBUG" ] && set -x

if [ "$1" = "--bare" ]; then
  hit_prefix=""
  miss_prefix=""
  current_version=""
  include_system=""
else
  hit_prefix="* "
  miss_prefix="  "
  current_version="$(goenv-version-name || true)"
  include_system="1"
fi

print_version() {
  if [ "$1" == "$current_version" ]; then
    echo "${hit_prefix}$(goenv-version 2>/dev/null)"
  else
    echo "${miss_prefix}$1"
  fi
}

# Include "system" in the non-bare output, if it exists
if [ -n "$include_system" ] && GOENV_VERSION=system goenv-which go >/dev/null 2>&1; then
  print_version system
fi

for path in "${GOENV_ROOT}/versions/"*; do
  if [ -d "$path" ]; then
    print_version "${path##*/}"
  fi
done
